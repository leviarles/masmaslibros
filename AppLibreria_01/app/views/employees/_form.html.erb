<%= form_for(@employee) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :rfc %><br>
    <%= f.text_field :rfc %>
  </div>
  <div class="field">
    <%= f.label :direccion %><br>
    <%= f.text_field :direccion %>
  </div>
  <div class="field">
    <%= f.label :cargo %><br>
    <%= f.text_field :cargo %>
  </div>
  <div class="field">
    <%= f.label :telefono %><br>
    <%= f.text_field :telefono %>
  </div>

 

 
<div id="datosUser">
  <fieldset>
   
  <legend>Datos del usuario</legend>
 

    <%= f.hidden_field :user_id %>

    <%= fields_for @employee.user do |c| %>

       <%= c.hidden_field :employee_id %>
      <%= c.text_field :name, :placeholder => "Nombre del usuario" %> <br>

      <%= c.email_field :email, :placeholder => "Correo electronico" %><br>

      <%= c.password_field :password, autocomplete:"off", :placeholder => "Controñesa"%><br>

      <%= c.password_field :password_confirmation, autocomplete: "off", :placeholder => "Verificar Controñesa "%>

      
    <% end %>

  </fieldset>
</div>





  <div class="actions">
   <%= f.submit %>
  </div>
<% end %>
