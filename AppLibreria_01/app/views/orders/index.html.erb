<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Fechapedido</th>
      <th>Enproceso</th>
      <th>Cumplida</th>
      <th>Entregado</th>
      <th>Cancelado</th>
      <th>Employee</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.fechapedido %></td>
        <td><%= order.enproceso %></td>
        <td><%= order.cumplida %></td>
        <td><%= order.entregado %></td>
        <td><%= order.cancelado %></td>
        <td><%= order.employee %></td>
        <td><%= order.customer %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

